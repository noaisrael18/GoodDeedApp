<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ProfileActivity">

    <!-- Profile Picture -->
    <ImageView
        android:id="@+id/profilePicture"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/profileName"
        app:layout_constraintHorizontal_bias="0.5" />

    <!-- Profile Name -->
    <TextView
        android:id="@+id/profileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Maya Levy"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/lato_bold"
        app:layout_constraintTop_toBottomOf="@+id/profilePicture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/profilePhoneNumber"
        app:layout_constraintHorizontal_bias="0.5" />

    <!-- Profile Phone Number -->
    <TextView
        android:id="@+id/profilePhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="1 (889) 636 3298"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/lato"
        app:layout_constraintTop_toBottomOf="@+id/profileName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/profileEmail"
        app:layout_constraintHorizontal_bias="0.5" />

    <!-- Profile Email -->
    <TextView
        android:id="@+id/profileEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="mlevy@gmail.com"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/lato"
        app:layout_constraintTop_toBottomOf="@+id/profilePhoneNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/goodDeedsComingUp"
        app:layout_constraintHorizontal_bias="0.5" />

    <!-- Good Deeds Coming Up Header -->
    <TextView
        android:id="@+id/goodDeedsComingUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Good Deeds Coming Up"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/lato_bold"
        app:layout_constraintTop_toBottomOf="@+id/profileEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/rvGoodDeedsComingUp"
        app:layout_constraintHorizontal_bias="0.5" />

    <!-- RecyclerView for Good Deeds Coming Up -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvGoodDeedsComingUp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@+id/goodDeedsComingUp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/goodDeedsCompleted" />

    <!-- Good Deeds Completed Header -->
    <TextView
        android:id="@+id/goodDeedsCompleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Good Deeds Completed"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/lato_bold"
        app:layout_constraintTop_toBottomOf="@+id/rvGoodDeedsComingUp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <!-- RecyclerView for Good Deeds Completed -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvGoodDeedsCompleted"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/goodDeedsCompleted"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Home Button -->
    <ImageView
        android:id="@+id/homeImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
